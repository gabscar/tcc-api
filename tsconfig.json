{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2019",
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": false,
    "strict": true,
    "baseUrl": "src",
    "typeRoots": ["node_modules/@types", "./src/@types/index.d.ts"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
