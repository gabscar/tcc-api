{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2019",
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,

    "strict": true,
    "baseUrl": "src",
    "typeRoots": ["node_modules/@types", "./src/@types/index.d.ts"]
  },
  "include": ["src"],
  "assets": ["src/images/*", "src/pubic/*"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "paths": {
    "@controllers/*": ["./src/api/controllers/*"],
    "@models/*": ["./src/api/models/*"],
    "@config/*": ["./src/config/*"],
    "@api/*": ["./src/api/*"],
    "@test/*": ["./test/*"]
  }
}
